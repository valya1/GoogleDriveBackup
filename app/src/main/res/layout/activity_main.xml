<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mihail.googledrive.presentation.main.view.StartActivity">

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btnToUpload"
        android:layout_width="236dp"
        android:layout_height="73dp"
        android:layout_marginBottom="40dp"
        android:text="Загрузить файл"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.224"
        android:layout_above="@+id/btnToDeleteList"
        android:layout_alignRight="@+id/btnToDeleteList"
        android:layout_alignEnd="@+id/btnToDeleteList" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btnToDeleteList"
        android:layout_width="237dp"
        android:layout_height="72dp"
        android:text="Удалить файл"
        android:visibility="visible"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="219dp"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/btnToDownloadList"
        android:layout_alignEnd="@+id/btnToDownloadList" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btnToDownloadList"
        android:layout_width="239dp"
        android:layout_height="73dp"
        android:text="Скачать файл"
        android:visibility="visible"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="338dp"
        app:layout_constraintHorizontal_bias="0.503"
        android:layout_marginBottom="88dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
